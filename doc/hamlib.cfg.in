## $Id: hamlib.cfg.in,v 1.6 2006-10-30 20:20:29 aa6e Exp $

PROJECT_NAME    = "Hamlib"
PROJECT_NUMBER  = @VERSION@

# Output
OUTPUT_DIRECTORY= .

OUTPUT_LANGUAGE = English
GENERATE_HTML   = YES
GENERATE_LATEX  = NO
GENERATE_RTF    = NO
GENERATE_MAN    = YES
MAN_EXTENSION	= .3

# Input
CASE_SENSE_NAMES = NO
FULL_PATH_NAMES = NO
INPUT	= @top_srcdir@/doc/index.doxygen \
          @top_srcdir@/src/ @top_srcdir@/include/hamlib/ \
          @top_srcdir@/tentec/orion.c @top_srcdir@/tentec/tentec.h \
          @top_srcdir@/tentec/orion.h

#../c++/rigclass.cc

INCLUDE_PATH	= @top_srcdir@/include

EXAMPLE_PATH    = @top_srcdir@/tests/testrig.c \
		@top_srcdir@

QUIET          = YES

HTML_STYLESHEET	= @top_srcdir@/doc/hamlib.css
HTML_FOOTER = @top_srcdir@/doc/footer.html

EXTRACT_ALL    = NO
EXTRACT_STATIC = NO
HIDE_UNDOC_MEMBERS = YES
SHOW_INCLUDE_FILES = YES
INHERIT_DOCS   = YES
ENABLED_SECTIONS = ""
PREDEFINED       = DOXYGEN "DOC_HIDDEN"
JAVADOC_AUTOBRIEF = NO
OPTIMIZE_OUTPUT_FOR_C = YES		# doxygen 1.2.6 option

MAN_LINKS              = NO
MACRO_EXPANSION        = YES

